@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br/>
<br/>

<form asp-controller="Role" asp-action="Edit" enctype="multipart/form-data">
    <partial name="RolePartialView/_CreateEditPartialView" />

    <a asp-controller="Role" asp-action="AddOrRemoveUsers" asp-route-RoleId="@Model.Id" class="btn btn-success">Add Or Remove User</a>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Role" asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section ValidationSection {
    <partial name="_ValidationScriptsPartial" />
}



